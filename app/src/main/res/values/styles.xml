<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- 全屏幕的主题 -->
    <style name="NoFitsSystemWindows" parent="AppTheme">
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <!-- 启动页的主题 -->
    <style name="AppStartTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@mipmap/icon_cover</item>
    </style>

    <declare-styleable name="BarPercentView">
        <!--进度条高度-->
        <attr name="barHeight" format="dimension" />
        <!--圆角矩形半径-->
        <attr name="barRadius" format="integer" />
        <!--进度条背景色-->
        <attr name="barBgColor" format="reference" />
        <!--进度条颜色-->
        <attr name="barProgressColor" format="reference" />
        <!--渐变开始颜色-->
        <attr name="barStartColor" format="reference" />
        <!--渐变结束颜色-->
        <attr name="barEndColor" format="reference" />
        <!--是否渐变-->
        <attr name="barIsGradient" format="boolean" />
    </declare-styleable>

    <declare-styleable name="LineProgressView">
        <!--进度条宽度-->
        <attr name="progressWidth" format="dimension" />
        <!--进度条背景色-->
        <attr name="progressBgColor" format="reference" />
        <!--进度条颜色-->
        <attr name="progressColor" format="reference" />
    </declare-styleable>


    <declare-styleable name="ProportionImageView">
        <attr name="proportion_width" format="integer" />
        <attr name="proportion_height" format="integer" />
        <attr name="radius_left_top" format="dimension" />
        <attr name="radius_right_top" format="dimension" />
        <attr name="radius_left_bottom" format="dimension" />
        <attr name="radius_right_bottom" format="dimension" />
    </declare-styleable>

    <declare-styleable name="BarrageView">
        <attr name="size" format="integer"/>
        <attr name="text_left_padding" format="integer"/>
        <attr name="text_right_padding" format="integer"/>
        <attr name="text_top_padding" format="integer"/>
        <attr name="text_bottom_padding" format="integer"/>
        <attr name="max_text_size" format="integer"/>
        <attr name="min_text_size" format="integer"/>
        <attr name="line_height" format="dimension"/>
        <attr name="border_color" format="color"/>
        <attr name="random_color" format="boolean"/>
        <attr name="allow_repeat" format="boolean"/>
    </declare-styleable>
</resources>
